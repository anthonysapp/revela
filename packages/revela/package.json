{
  "name": "revela",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --sourcemap --clean",
    "dev": "tsup src/index.ts --watch --dts --format esm,cjs",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "motion": "^10.16.2",
    "swup": "^4.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.5.4"
  }
}
